<div class="jumbotron">
  <h1>Hello, folks!</h1>
  <p>
    <strong>Reminders</strong> is an awesome way to keep track of all your events for the day, so that you never miss what
    matters.
  </p>
  <p>
    <%= link_to 'Create new reminder', new_event_path, class: "btn btn-success btn-lg", role: "button", remote: true, "data-toggle" => "modal", "data-target" => "application-modal" %>
  </p>
</div>

<div class="modal hide fade" id="application-modal" title="Application modal">
  <div class="modal-header">
    <button aria-hidden="true" class="close" data-dismiss="modal" type="button">X</button>
    <h3 id="application-modal-label">This Modal Label will be replaced by JS dynamically</h3>
  </div>
  <div class="modal-body"></div>
  <div class="modal-footer">
    <button aria-hidden="true" class="btn btn-primary" data-dismiss="modal">Close</button>
  </div>
</div>

<% @events.each do |event| %>
  <div class="page-header">
    <span class="pull-right">
      <%= link_to 'Edit', edit_event_path(event), class: "btn btn-primary btn-sm" %>
      <%= link_to 'Destroy', event, method: :delete, data: {confirm: "Are you sure you want to delete this reminder? This action is not reversible and clicking 'Ok' will delete it forever."}, class: "btn btn-danger btn-sm", role: "button" %>
    </span>
    <h3><%= event.title %></h3>
    <span class="<%= date_color(event.date) %>"><%= date_format(event.date) %></span><br><br>
    <p><%= simple_format(event.notes) %></p>
  </div>
<% end %>